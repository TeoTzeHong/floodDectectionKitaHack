<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_rounded_white"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icon -->
    <ImageView
        android:id="@+id/ivRiverIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_blue_light"
        android:padding="10dp"
        android:src="@drawable/ic_water_placeholder"
        android:contentDescription="River Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klang River"
            android:textStyle="bold"
            android:textColor="@color/text_primary_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="STATION: MASJID JAMEK"
            android:textColor="@color/text_secondary_light"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_safe"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="NORMAL"
            android:textColor="@color/success_green"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWaterLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2.1m / 4.5m"
            android:textColor="@color/text_secondary_light"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
