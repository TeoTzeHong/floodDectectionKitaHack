<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_bg"
    android:elevation="4dp">

    <!-- Header Row: Status Badge + Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvMissionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:background="#22F44336"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textSize="11sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvMissionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just now"
            android:textSize="11sp"
            android:textColor="#9E9E9E"/>
    </LinearLayout>

    <!-- Location -->
    <TextView
        android:id="@+id/tvMissionLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Lat: 4.2105, Lon: 101.9758"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginTop="10dp"/>

    <!-- ETA Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvMissionEta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ• ETA: Calculating..."
            android:textSize="13sp"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/tvMissionDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="#757575"/>
    </LinearLayout>

    <!-- Action Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical">

        <!-- Accept - shown when PENDING -->
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Accept"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"/>

        <!-- On the Way - shown when ASSIGNED -->
        <Button
            android:id="@+id/btnOnTheWay"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="On The Way"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"/>

        <!-- Navigate - shown when ASSIGNED or ON_THE_WAY -->
        <Button
            android:id="@+id/btnNavigate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Navigate"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"/>

        <!-- Rescued - shown when ON_THE_WAY -->
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Rescued âœ“"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
