<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Jumping Warning Icon -->
    <ImageView
        android:id="@+id/ivWarningIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_warning_red"
        android:background="@drawable/bg_circle_blue_light"
        android:backgroundTint="#FFEBEE"
        android:padding="16dp"
        app:tint="#D50000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS EMERGENCY"
        android:textColor="#0D1B2A"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivWarningIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSosSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please provide rescue details for faster dispatch."
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSosTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCurrentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Detecting Location..."
        android:textColor="#D50000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_circle_outline"
        app:layout_constraintTop_toBottomOf="@id/tvSosSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Details Card -->
    <LinearLayout
        android:id="@+id/cardDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_rounded_white"
        android:backgroundTint="#F5F7FA"
        android:padding="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trapped People Counter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TRAPPED PEOPLE"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#546E7A"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMinus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textSize="24sp"
                android:textColor="#546E7A"
                android:background="@drawable/bg_circle_outline"
                app:backgroundTint="@null"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"/>

            <TextView
                android:id="@+id/tvPeopleCount"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#0D1B2A"/>

             <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textSize="24sp"
                android:textColor="#546E7A"
                android:background="@drawable/bg_circle_outline"
                app:backgroundTint="@null"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Special Assistance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Assistance"
                    android:textStyle="bold"
                    android:textColor="#0D1B2A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHILD / ELDERLY / DISABLED"
                    android:textSize="10sp"
                    android:textColor="#90A4AE"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbSpecialAssistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Activate Button -->
    <Button
        android:id="@+id/btnActivateSOS"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ACTIVATE RESCUE SOS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D50000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Safety Tips (Horizontal Scroll) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— REMAIN CALM"
                android:padding="8dp"
                android:background="@drawable/card_rounded_white"
                android:backgroundTint="#F5F5F5"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— HEAD UPWARD"
                 android:padding="8dp"
                android:background="@drawable/card_rounded_white"
                android:backgroundTint="#F5F5F5"
                 android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— SIGNAL LIGHT"
                 android:padding="8dp"
                android:background="@drawable/card_rounded_white"
                android:backgroundTint="#F5F5F5"
                 android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— SAVE BATTERY"
                 android:padding="8dp"
                android:background="@drawable/card_rounded_white"
                android:backgroundTint="#F5F5F5"
                 android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
