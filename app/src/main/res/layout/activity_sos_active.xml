<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    tools:context=".ActivitySOSActive">

    <!-- Pulsing Animation Container -->
    <FrameLayout
        android:id="@+id/pulseContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Outer Fade Ring (Subtle) -->
         <View
            android:id="@+id/pulseCircle1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_outline"
            android:backgroundTint="#FFEBEE"
            android:alpha="0.0"/>

        <!-- The Main Red Dot -->
        <ImageView
            android:id="@+id/centerRedDot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_outline"
            android:backgroundTint="#D32F2F"
            android:elevation="10dp"/>
            
        <!-- Inner Heartbeat (Lighter red inside) -->
         <View
            android:id="@+id/innerPulse"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle_outline"
            android:backgroundTint="#E57373"
            android:elevation="10dp"/>
            
    </FrameLayout>

    <TextView
        android:id="@+id/tvBroadcastingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNAL BROADCASTING"
        android:textColor="#B71C1C"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pulseContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvBroadcastingSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● GPS LOCKED • HELP ON THE WAY"
        android:textColor="#D32F2F"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBroadcastingTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvBroadcastingSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RESCUE STATUS"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:textColor="#90A4AE"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:background="@drawable/bg_circle_outline"
                    android:backgroundTint="#FFF3E0"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#F57C00"/>
            </LinearLayout>

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#4CAF50"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Received"
                        android:textStyle="bold"
                        android:textColor="#37474F"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MALAYSIA COMMAND NODE"
                        android:textSize="12sp"
                        android:textColor="#78909C"/>
                </LinearLayout>
            </LinearLayout>

             <!-- Step 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#B0BEC5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Dispatched"
                        android:textStyle="bold"
                        android:textColor="#37474F"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNIT: MY-K9-ALPHA"
                        android:textSize="12sp"
                        android:textColor="#78909C"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL RESCUE REQUEST"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/scrollTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <HorizontalScrollView
        android:id="@+id/scrollTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● REMAIN CALM"
                android:background="@drawable/bg_circle_outline"
                android:backgroundTint="#FFEBEE"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#B71C1C"
                android:layout_marginEnd="8dp"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● HEAD UPWARD"
                android:background="@drawable/bg_circle_outline"
                android:backgroundTint="#FFEBEE"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#B71C1C"
                android:layout_marginEnd="8dp"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● SIGNAL LIGHT"
                android:background="@drawable/bg_circle_outline"
                android:backgroundTint="#FFEBEE"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#B71C1C"
                android:layout_marginEnd="8dp"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● SAVE BATTERY"
                android:background="@drawable/bg_circle_outline"
                android:backgroundTint="#FFEBEE"
                android:padding="12dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#B71C1C"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
