<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Floodprediction" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <style name="Theme.Floodprediction" parent="Base.Theme.Floodprediction" />

    <style name="CardStyle">
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:padding">14dp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="AccentButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/background_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>